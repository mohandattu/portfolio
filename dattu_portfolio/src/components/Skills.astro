---
import Section from "./Section.astro";
import type { SkillProps } from "@types";

interface Props {
  skills: SkillProps[];
}

const { skills } = Astro.props;
---

<Section text="Technical Skills" href="skills">
  <div class="grid grid-cols-1 gap-10 md:grid-cols-2">
    {
      skills.map(({ category, items }) => (
        <div>
          <h3 class="mb-4 font-serif text-2xl font-semibold text-white">
            {category}
          </h3>
          <ul class="list-disc pl-5 text-neutral">
            {items.map((item) => (
              <li class="mb-2">
                {typeof item === "string" ? (
                  item
                ) : (
                  <a
                    href={item.url}
                    target="_blank"
                    class="hover:text-primary hover:underline"
                  >
                    {item.text}
                  </a>
                )}
              </li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</Section>
